{
	"name": "vag_tools",
	"version": "0.0.6",
	"description": "api and cli for managing sub-git-repositories",
	"type": "module",
	"private": false,
	"main": "./dist/vag_core.js",
	"types": "./dist/vag_core.d.ts",
	"bin": {
		"vag": "dist/vag_cli.js",
		"vagg": "dist/vagg_server.js"
	},
	"files": [
		"dist/",
		"!dist/**/*.map",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"engines": {
		"node": ">=20.10.0"
	},
	"tsup": {
		"entry": [
			"src/vag_core.ts",
			"src/vag_cli.ts",
			"src/vagg_server.ts"
		],
		"format": "esm",
		"splitting": false,
		"dts": true,
		"sourcemap": true,
		"clean": true
	},
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"check": "tsc --noEmit",
		"pretty": "prettier --check .",
		"format": "prettier --write .",
		"lint": "eslint .",
		"test:unit": "vitest",
		"test:unit:once": "vitest --run",
		"ci": "run-s check build pretty lint",
		"clean": "shx rm -fr build dist tmp",
		"test:basic": "node build/tests/vag.test.js",
		"test:cli": "tests/vag-cli.test.sh",
		"test:coverage": "vitest run --coverage",
		"test": "run-s test:basic test:cli test:vitest",
		"dist:build": "tsc --build tsconfig.dist.json",
		"clean_all": "run-s clean"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/charlyoleg2/vag.git"
	},
	"keywords": [
		"git",
		"sub-repo",
		"multi-repo",
		"submodule",
		"subtree",
		"vcs",
		"vcstool",
		"repositories"
	],
	"author": "charlyoleg",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/charlyoleg2/vag/issues"
	},
	"homepage": "https://github.com/charlyoleg2/vag#readme",
	"dependencies": {
		"fs-extra": "^11.2.0",
		"simple-git": "^3.25.0",
		"yaml": "^2.5.0",
		"yargs": "^17.7.2"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.1.0",
		"@types/yargs": "^17.0.32",
		"eslint": "^8.57.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.3",
		"shx": "^0.3.4",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"typescript-eslint": "^7.18.0",
		"vitest": "^2.0.5"
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "none",
		"printWidth": 100,
		"plugins": [],
		"overrides": []
	}
}
